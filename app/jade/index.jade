include _layout/_mixin
doctype html
html(lang="ru-Ru")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=1150, initial-scale=1")
		title COOLTECH
		// bower:css
		// endbower
		link(href="css/main.css" rel="stylesheet")

	body
		div.wrapper
			header.header
				div.header-contact
					div.section-wrapper
						div.social
							-var socials = [{soc:'fb', url:'https://www.facebook.com/', text:'facebook'},{soc:'vk', url:'http://vk.com/', text:'vkontakte'},{soc:'twt', url:'https://twitter.com/', text:'twitter'}];
							ul.social__list
								each item in socials
									li.social__item
										a(href="#{item.url}" class="social__link_#{item.soc}").social__link
											|#{item.text}
						div.address
							i.address__icon
							span.address__name.
								ул. Маяковская 6, офис 17
						div.contact
							i.contact__icon
							span.contact__phone.
								+7 (921) 123-12-13
				div.header-search
					div.section-wrapper
						div.logo
							a(href="/").logo__link
								img(src="img/logo/logo.png" alt="cooltech").logo__img
								h1.logo__header
									|COOLTECH
						div.search
							form(name="search" method="get").search__form
								input(type="search" placeholder="Что будем искать").search__input
								button(type="submit").search__submit
									|Найти
						div.basket
							-var basket = [{name: 'Карта проезда', class: 'map'}, {name: 'История заказов', class: 'history'}, {name: 'Корзина', class: 'bask' }]
							ul.basket__list
								each item in basket
									li.basket__item
										a(href="#" class="backet__link_#{item.class}").backet__link
											|#{item.name}
			nav.nav
				div.section-wrapper
					-var nav = [{name:'Планшеты', link:'#', active:''}, {name:'Мобильные телефоны', link:'#', active: '_active'}, {name:'Mp3 плееры', link:'#', active:''}, {name:'Персональные компьютеры', link:'#', active:''}, {name:'Ноутбуки', link:'#', active:''}, {name:'Аксессуары', link:'#', active:''}, {name:'Бытовая техника', link:'#', active:''}]
						
					ul.nav__list
						each item in nav
							li.nav__item
								a(href="#{item.link}" class="#{item.active == '_active' ? 'nav__link_active' : ''}").nav__link
									|#{item.name} 

			div.breadcrumbs
				div.section-wrapper
					-var breadcrumbs = [{name: 'Главная >', link: '#'}, {name: 'Каталог', link: '#', active: '_active'}]
					ul.breadcrumbs__list
						each item in breadcrumbs
							li.breadcrumbs__item
								a(href="#{item.link}" class="#{item.active == '_active' ? 'breadcrumbs__link_active' : ''}").breadcrumbs__link
									|#{item.name} 
			div.nav-name
				div.section-wrapper
					h2.name__title
						|Мобильные телефоны
						
			div.section-wrapper
				aside.aside
					div.category
						-var category = [{name:'Флагманы', active:'', class: 'flagship'},{name: 'Бюджетная линейка', active: '_active', class: 'budget'}]
						ul.category__list
							each item in category
								li.category__item
									a(href="#" class="#{item.active == '_active' ? 'category__link_active' : ''}").category__link
										|#{item.name}

					div.accordion
						ul.accordion__list
							li.accordion__item.active
								a(href="#").accordion__trigger
									|Наличие в магазинах
									i.accordion__up
								ul(style="display:block").accordion__inner
									li.accordion__inner-item.accordion__item_check
										input(id="all" type="radio" name="availability" checked).radio__input
										label(for="all").radio__label 
											|Во всех магазинах
									li.accordion__inner-item.accordion__item_check
										input(id="nearest" type="radio" name="availability").radio__input 
										label(for="nearest").radio__label
											|В ближайшем ко мне магазине
							li.accordion__item.accordion__inner-item_check
								a(href="#").accordion__trigger
									|Бренды
									i.accordion__up

								+checkbox('accordion__inner', ['lenovo', 'apple', 'samsung', 'asus', 'motorola'])

								

							li.accordion__item
								div.price
									a(href="#").accordion__trigger
										|Цена
										i.accordion__up
									ul.accordion__inner.price__list
										li.accordion__inner-item
											span.price__text от
											input(type="text" ).price__input.price__input_from.price-left
											span.price__text до
											input(type="text" ).price__input.price__input_to.price-right
										li.accordion__inner-item
											div(class="price__element" data-min="0" data-max="25000")

							li.accordion__item
								a(href="#").accordion__trigger
									|Цвет
									i.accordion__up
								ul.accordion__inner
									li.accordion__inner-item
										-var color = ['white', 'grey', 'black', 'darkblue', 'red', 'yellow', 'orange', 'green', 'blue', 'purple', 'pink', 'brown']
										
										ul.color__list
											each item in color
												li.color__item
													a(href="#" class="color__link_#{item}" ).color__link
														|#{item}
							li.accordion__item
								a(href="#").accordion__trigger
									|Операционная система
									i.accordion__up
								+checkbox('accordion__inner', ['android', 'iOs', 'windows mobile', 'symbian', 'custom'])
							

				div.content
					div.view-catalog
						div.sorting
							label(for="select").sorting__title
								|Сортировать по
							div.select__wrapper
								select(id="select" name="select").sorting__select
									option
										|по популярности
									option(selected)
										|по цене

						div.view-catalog__icon
							span.view-catalog__title
								|Вид каталога
							div.view-catalog__wrapper
								ul.view-catalog__list
									li.view-catalog__item.active
										a(href="#" class="view-catalog__link_table" data-view="table").view-catalog__link
											|table
									li.view-catalog__item
										a(href="#" class="view-catalog__link_thumbnail" data-view="thumbnail").view-catalog__link
											|thumbnail
									li.view-catalog__item
										a(href="#" class="view-catalog__link_list" data-view="list").view-catalog__link
											|link

					main.catalog
						ul(id="goods__list").goods__list
							- for (var i = 0; i < 9; i++)
								li.goods__item
									div.goods__item-inner
										div.goods__left
											div.goods__slideshow
												div.goods__slideshow-block
													a(href="#").goods__slideshow-display
														img(src="http://lorempixel.com/200/200/technics/6" alt="").goods__slideshow-img
													ul.goods__slideshow-thumbs
														- for (var j = 0; j < 3; j++)
															li.goods__slideshow-item
																a(href="#").goods__slideshow-link
																	img(src="http://lorempixel.com/40/40/technics/" + j alt="").goods__slideshow-thumb-img
												div.goods__article
													div.goods__article-word 
														|Артикул
													div.goods__article-art 
														|189238
											div.goods__desc
												div.goods__desc-title 
													|Samsung GT-I9301I GALAXY S 3 
												ul.goods__desc-options
													- var options = {'Тип SIM-карты': 'Micro-SIM', 'Количество SIM-карт': '1', 'Цвет':'Белый', 'ОС': 'Android', 'Связь 3G': 'Есть', '4G(LTE)': 'Нет', 'GPS-модуль': 'Есть'}
													- var index = 0;
													- for (item in options)
														li(class="goods__option-item" + ( !(index++ % 2) ? ' goods__option-item_bg' : ''))
															div.goods__option-key= item
															div.goods__option-value= options[item]
												div.goods__rating
													ul.goods__rating-stars
														li.goods__rating-stars-item.goods__rating-stars-item_full
														li.goods__rating-stars-item.goods__rating-stars-item_full
														li.goods__rating-stars-item.goods__rating-stars-item_full
														li.goods__rating-stars-item.goods__rating-stars-item_full
														li.goods__rating-stars-item
													div.goods__rating-amount 4
										div.goods__right
											div.goods__info
												div.goods__price
													|11 290
													i.rub
											div.goods__info-bottom
												a(href="#").goods__buy-btn
													|В корзину
												div.goods__availability
													|В наличии
						div.pagination
							ul.pagination__list
								li.pagination__item.pagination__item__prev
									a(href="#").pagination__link
										div.pagination__mark
								- for (var i = 1; i < 4; i++)
									li.pagination__item
										a(href="#").pagination__link
											div.pagination__mark= i
								li.pagination__item.pagination__item__next
									a(href="#").pagination__link
										div.pagination__mark

					


		footer.footer
			


		// bower:js
		// endbower

		script(src="js/main.js")
	